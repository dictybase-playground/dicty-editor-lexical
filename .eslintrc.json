{
  "extends": [
    "react-app",
    "airbnb",
    "airbnb/hooks",
    "plugin:github/recommended",
    "plugin:sonarjs/recommended",
    "plugin:unicorn/recommended",
    "plugin:compat/recommended",
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "vi": true,
    "JSX": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "no-underscore-dangle": "off",
    "import/no-unresolved": "error"
  }
}
